<page-meta page-style="{{ modalShow ? 'overflow: hidden;' : '' }}" />

<view class="DrawerPage  {{modalName=='viewModal'?'show':''}}">
	<scroll-view scroll-y class="index_pages">
		<view class="pages_wrap van-safe">
			<view class="pages_head bg-gradual-blue flex-row-start-end">
				<view class="head_cont flex-row-start-center">
					<view class="head_icon" bindtap="showModal" data-value="viewModal">
						<van-icon name="apps-o" size="24px" color="#FFFFFF" />
					</view>
					<view class="head_title flex1 flex-row-center-center">
						<text class="title_text">乐逍遥</text>
					</view>
				</view>
			</view>
			<view class="pages_body">
				<view class="pages_swiper">
					<view class="tower-swiper" bindtouchmove="towerMove" bindtouchstart="towerStart" bindtouchend="towerEnd">
						<view class="tower-item {{item.zIndex==1?'none':''}}" wx:for="{{swiperList}}" wx:key="index" style="--index:{{item.zIndex}};--left:{{item.mLeft}}">
							<view class="swiper-item">
								<image src="{{item.url}}" mode="aspectFill" wx:if="{{item.type=='image'}}"></image>
								<video src="{{item.url}}" autoplay loop muted show-play-btn="{{false}}" controls="{{false}}" objectFit="cover" wx:if="{{item.type=='video'}}"></video>
							</view>
						</view>
					</view>
				</view>
				<view class="pages_list flex-wrap-start">
					<block wx:for="{{arrayList}}" wx:key="index">
						<view class="list_items {{item.className}}">哈哈哈</view>
					</block>
				</view>	
			</view>
		</view>
	</scroll-view>
</view>
<view class="DrawerClose {{modalName=='viewModal'?'show':''}}" bindtap="hideModal">
	<text class="cuIcon-pullright"></text>
</view>
<view class="DrawerWindow {{modalName=='viewModal'?'show':''}}">
	<view class="index_hide_wrap" style="padding-top: {{StatusBar}}px;">
		<view class="wrap_main">
			<view class="wrap_head">
				<view class="wrap_head_info flex-row-start-center">
					<view class="wrap_info_avatar flex-row-center-center">
						<van-icon name="contact-o" size="20px" color="#f8f8f8" />
					</view>
					<view class="wrap_info_text flex1">
						<view class="text_item flex-row-start-end">
							<text class="txt name">张三丰</text>
							<text class="txt">自由级</text>
						</view>
						<view class="text_item flex-row-start-end">
							<text class="txt">嘿嘿嘿</text>
							<text class="txt">哈哈哈</text>
						</view>
					</view>
				</view>
			</view>
			<view class="cu-list menu card-menu shadow-lg radius">
				<view class="cu-item arrow">
					<view class="content" bindtap="CopyLink" data-link="https://github.com/weilanwl/ColorUI">
						<text class="cuIcon-github text-grey"></text>
						<text class="text-grey">GitHub</text>
					</view>
				</view>
				<view class="cu-item arrow">
					<navigator class="content" url="/pages/about/about/about" hover-class="none">
						<image src="/images/logo.png" class="png" mode="aspectFit"></image>
						<text class="text-grey">关于ColorUI组件库</text>
					</navigator>
				</view>
				<view class="cu-item arrow">
					<navigator class="content" url="/pages/about/log/log" hover-class="none">
						<text class="cuIcon-formfill text-green"></text>
						<text class="text-grey">日志</text>
					</navigator>
				</view>
				<view class="cu-item arrow">
					<view class="content" bindtap="showQrcode">
						<text class="cuIcon-appreciatefill text-red"></text>
						<text class="text-grey">赞赏支持</text>
					</view>
				</view>
				<view class="cu-item arrow">
					<button class="cu-btn content" open-type="feedback">
						<text class="cuIcon-writefill text-cyan"></text>
						<text class="text-grey">意见反馈</text>
					</button>
				</view>
				<view class="cu-item arrow">
					<navigator class="content" url="/pages/about/test/list" hover-class="none">
						<text class="cuIcon-creativefill text-orange"></text>
						<text class="text-grey">Bug测试</text>
					</navigator>
				</view>
			</view>
		</view>
	</view>
</view>

<getInfoModal bindonChangeModalFlag="modalFlagChange"></getInfoModal>